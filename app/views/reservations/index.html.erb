<h1>Listing reservations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Contact</th>
    <th>Email</th>
    <th>Date</th>
    <th>Timestart</th>
    <th>Timeend</th>
    <th>Numguest</th>
    <th>Confirm</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= reservation.name %></td>
    <td><%= reservation.contact %></td>
    <td><%= reservation.email %></td>
    <td><%= reservation.date %></td>
    <td><%= reservation.timeStart %></td>
    <td><%= reservation.timeEnd %></td>
    <td><%= reservation.numGuest %></td>
    <td><%= reservation.confirm %></td>
    <td><%= link_to 'Show', reservation %></td>
    <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
    <td><%= link_to 'Destroy', reservation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

